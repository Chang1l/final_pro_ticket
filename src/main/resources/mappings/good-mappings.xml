<mapper namespace="GoodDAO">
<insert id="insertGood">
	INSERT INTO GOOD (
	MB_ID,EXH_NO)
	VALUES(#{mb_id},#{exh_no})
</insert>


   <update id="updateGood">
      UPDATE GOOD
 	 SET GOOD_CHECK=#{good_check}
      WHERE GOOD_ID=#{good_id}
  </update>

<select id="getGoodChk" resultType="good">
SELECT *
from GOOD
WHERE 1=1
AND EXH_NO= #{exh_no}
AND MB_ID=#{mb_id};

</select>

<select id="getGoodYN" resultType="_integer">
SELECT COUNT(*)
from GOOD
WHERE 1=1
AND EXH_NO= #{exh_no}
AND MB_ID=#{mb_id};
</select>

